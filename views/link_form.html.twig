  
     
<h2 class="text-center" id="link_form_title">{{title}}</h2>
    

    {% for flashMessage in app.session.flashbag.get('success') %}                       

                <div id="message" class="alert alert-success alert-dismissable">
                        
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        {{ flashMessage }}
                
                </div>
                          
    {% endfor %}  
    
    {% if linkForm %}
         
                <div class="jumbotron col-md-12" id="link_form">
                 

                {{ form_start(linkForm,{ 'attr': {'class': 'form-horizontal col-md-6 col-md-offset-3'} }) }}
                   <div class="form-group">                               
                       <div class="col-md-12">    
                           {{ form_errors(linkForm.title) }}
                            {{ form_label(linkForm.title,'Title')}}
                           {{ form_widget(linkForm.title, { 'attr':  {
                               'rows': '4',
                               'class': 'form-control',
                               'placeholder': 'Enter the title of the link'
                           }}) }}                                
                       </div>
                   </div>
                   <div class="form-group">                                                               
                       <div class="col-md-12">
                           {{ form_errors(linkForm.url) }}
                           {{ form_label(linkForm.url,'URL')}}
                           {{ form_widget(linkForm.url, { 'attr':  {
                               'rows': '4',
                               'class': 'form-control',
                               'placeholder': 'Copy/paste the link'
                           }}) }}     
                       </div>
                   </div>

                   <div class="form-group">
                       <div class="col-md-6">
                           <button type="submit" class="btn btn-default btn-primary"><span class="glyphicon glyphicon-share"></span> save link</button>
                       </div>    
                   </div>

               {{ form_end(linkForm) }}
                
                
                </div> 
                    
                    
    {% endif %}          
    
   


        
 